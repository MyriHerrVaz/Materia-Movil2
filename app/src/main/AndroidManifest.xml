<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UsuarioApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AccesoSicenet"
        tools:targetApi="31">
        <activity
            android:name=".screens.CalificacionUnidad"
            android:exported="false"
            android:label="@string/title_activity_calificacion_unidad"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.Cardex"
            android:exported="false"
            android:label="@string/title_activity_cardex"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.CardexAlumno"
            android:exported="false"
            android:label="@string/title_activity_cardex_alumno"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.CalificacionFinal"
            android:exported="false"
            android:label="@string/title_activity_calificacion_final"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.Horario"
            android:exported="false"
            android:label="@string/title_activity_horario"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.Perfil"
            android:exported="false"
            android:label="@string/title_activity_perfil"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".screens.MostrarUsuario"
            android:exported="false"
            android:label="@string/title_activity_mostrar_usuario"
            android:theme="@style/Theme.AccesoSicenet" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AccesoSicenet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>